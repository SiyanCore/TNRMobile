<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="?attr/actionBarSize" tools:context="com.siyanmo.tnrmobile.Fragment.NewOrdersFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="#fdfefe"
        android:weightSum="1" android:layout_gravity="center">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b6bde3f9"
            android:paddingBottom="8dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:layout_columnSpan="2"
                android:text="03/05/2015"
                android:ems="0"
                android:id="@+id/txtdate"
                android:gravity="right"
                android:layout_gravity="right|bottom"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginRight="16dp" />

            <AutoCompleteTextView
                android:id="@+id/CusTomerName"
                android:layout_below="@+id/textCus"
                android:ems="0"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:layout_gravity="left|bottom"
                android:layout_column="1"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight=".0"
                android:hint="Type Customer Name "
                android:background="#fefdfd"
                android:layout_marginLeft="166dp"
                android:layout_marginRight="170dp"/>

            <TextView
                android:id="@+id/textCus"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:text="Customer Name : "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="left|center"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_weight=".7"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b6bde3f9"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
             android:id="@+id/text1"
             android:layout_columnSpan="2"
             android:layout_row="1"
             android:text="Item : " android:textAppearance="?android:attr/textAppearanceMedium"
             android:layout_gravity="left|center"
             android:layout_column="0"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" android:layout_marginLeft="16dp"/>

            <AutoCompleteTextView
                android:id="@+id/Itemcode"
                android:layout_columnSpan="2"
                android:layout_row="1"
                android:layout_below="@+id/text1"
                android:layout_gravity="left|bottom"
                android:ems="0"
                android:layout_column="2"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:hint="Type code"
                android:completionHint="f"
                android:background="#fefdfd"
                android:layout_marginLeft="70dp" />

            <AutoCompleteTextView
             android:id="@+id/ItemName"
             android:layout_columnSpan="2"
             android:layout_row="1"
             android:layout_below="@+id/text1"
             android:layout_gravity="left|bottom"
             android:ems="0"
             android:layout_column="3"
             android:layout_width="match_parent"
             android:layout_height="32dp"
                android:hint="Type Item Name"
                android:background="#fefdfd"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="16dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b6bde3f9"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="ADD"
                android:id="@+id/button"
                android:layout_gravity="left|center"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="16dp"
                android:layout_row="2"
                android:layout_column="2"
                style="@style/Base.Widget.AppCompat.Button.Colored"/>

            <EditText
                android:layout_width="79dp"
                android:layout_height="32dp"
                android:id="@+id/txtquntity"
                android:layout_marginTop="0dp"
                android:layout_gravity="left|center"
                android:layout_row="2"
                android:layout_column="1"
                android:background="#ffffff"
                android:layout_marginLeft="100dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_columnSpan="2"
                android:layout_row="2"
                android:text="Quantity : "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="left|center"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"/>
        </FrameLayout>


    </LinearLayout>

</FrameLayout>