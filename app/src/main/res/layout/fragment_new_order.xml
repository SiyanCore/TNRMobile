<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="?attr/actionBarSize" tools:context="com.siyanmo.tnrmobile.Fragment.NewOrdersFragment">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="275dp" android:background="#fdfefe"
    android:weightSum="1" android:layout_gravity="center_vertical">

    <!-- TODO: Update by lakmal -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:background="#b6bde3f9">

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtdate"
            android:layout_gravity="right|center_vertical"
            android:layout_row="1"
            android:layout_column="2"
            />

        <AutoCompleteTextView
            android:id="@+id/CusTomerName"
            android:layout_below="@+id/textCus"
            android:ems="0"
            android:layout_columnSpan="2"
            android:layout_row="1"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_weight=".0"
            android:hint="Type Customer Name "
            android:background="#fefdfd" />

        <TextView
            android:id="@+id/textCus"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:text="Customer Name :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="left|center_vertical"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_weight=".7"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#b6bde3f9">

        <AutoCompleteTextView
     android:id="@+id/ItemName"
     android:layout_columnSpan="2"
     android:layout_row="4"
     android:layout_below="@+id/text1"
     android:layout_gravity="center"
     android:ems="0"
     android:layout_column="0"
     android:layout_width="271dp"
     android:layout_height="wrap_content"
            android:completionHint="f"
            android:hint="Type Item Code"
            android:background="#fefdfd" />

        <TextView
     android:id="@+id/text1"
     android:layout_columnSpan="2"
     android:layout_row="3"
     android:text="Item Code :" android:textAppearance="?android:attr/textAppearanceMedium"
     android:layout_gravity="left|center_vertical"
     android:layout_column="0"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtquntity"
            android:layout_marginTop="0dp"
            android:layout_gravity="right|center_vertical"
            android:layout_row="4"
            android:layout_column="2" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:id="@+id/button"
            android:layout_gravity="center"
            android:background="#44b8f7" />
    </FrameLayout>


</LinearLayout>

</FrameLayout>