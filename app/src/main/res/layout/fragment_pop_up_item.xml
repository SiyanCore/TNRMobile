<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b6bde3f9"
    tools:context="com.siyanmo.tnrmobile.Fragment.PopUpItemFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@android:dimen/app_icon_size"
        android:paddingBottom="@android:dimen/app_icon_size"

        android:layout_gravity="center">
        <ListView
            android:paddingTop="16dp"
            android:id="@+id/PopUpItemListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></ListView>
    </LinearLayout>



    <SearchView
        android:id="@+id/PopUpItemSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b6bde3f9"
        android:layout_gravity="top"/>

    <Button
        android:id="@+id/PopUpItemCancellButlon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_gravity="bottom"
        style="@android:style/Widget.Holo.Light.Button" />

</FrameLayout>
